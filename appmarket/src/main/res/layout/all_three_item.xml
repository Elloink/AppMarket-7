<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="72dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="54dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/three_item_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|left"
            android:layout_weight="3">

            <TextView
                android:id="@+id/three_item_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="有缘网"
                android:layout_weight="1"/>

            <RatingBar
                android:id="@+id/three_item_ratting"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:numStars="5"
                style="@style/RatingBar"
                android:rating="4"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/three_item_size"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="3.33 MB"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <dle.appmarket.View.ArrowDownloadButton
                android:id="@+id/three_item_download"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>
    
    
    <TextView
        android:id="@+id/three_item_summary"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:ellipsize="end"
        android:maxEms="11"
        android:singleLine="true"/>


</LinearLayout>